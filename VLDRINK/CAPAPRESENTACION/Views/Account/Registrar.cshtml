@{
    ViewBag.Title = "Registrar Nuevo Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Crear Cuenta</h3></div>
                                <div class="card-body">

                                    @using (Html.BeginForm("Registrar", "Account", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" id="inputNombres" type="text" placeholder="Juan" name="nombres" required />
                                                    <label for="inputNombres">Nombres</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    <input class="form-control" id="inputApellidos" type="text" placeholder="Perez" name="apellidos" required />
                                                    <label for="inputApellidos">Apellidos</label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputEmail" type="email" placeholder="name@example.com" name="email" required />
                                            <label for="inputEmail">Correo Electrónico</label>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputPassword" type="password" placeholder="Contraseña" name="password" required />
                                            <label for="inputPassword">Contraseña</label>
                                        </div>

                                        if (ViewBag.Error != null)
                                        {
                                            <div class="alert alert-danger" role="alert">
                                                @ViewBag.Error
                                            </div>
                                        }

                                        <div class="mt-4 mb-0">
                                            <div class="d-grid">
                                                <button type="submit" class="btn btn-primary btn-block">Crear Cuenta</button>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>